{
  "name": "terkplumber-ui-styles",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/terkplumber-ui-styles/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/terkplumber-ui-styles",
        "main": "libs/terkplumber-ui-styles/src/index.ts",
        "tsConfig": "libs/terkplumber-ui-styles/tsconfig.lib.json",
        "assets": ["libs/terkplumber-ui-styles/*.md"],
        "styles": ["libs/terkplumber-ui-styles/src/*.css"],
        "stylePreprocessorOptions": {
          "includePaths": [
            "libs/terkplumber-ui-styles/src/*.css"
          ]
        },
        "extractCss": true
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs terkplumber-ui-styles {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/terkplumber-ui-styles/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/terkplumber-ui-styles/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
